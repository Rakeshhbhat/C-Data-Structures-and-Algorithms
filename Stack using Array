#include<stdio.h>
#include<stdlib.h>
#define MAX 50
int top=-1;
int a[MAX];
void push(int item)
{
    if(top==MAX-1)
    {
        printf("underflow \n");
    }
    top++;
    a[top]=item;
}
void pop()
{
    if(top==-1)
    {
        printf("underflow \n");
    }
    printf("%d was popped \n",a[top]);
    top--;
}
void peek()
{
    printf("%d is at top \n",a[top]);
}
void display()
{
    int i;
    printf("elements are ");
    for(i=top;i>=0;i--)
    printf("%d ",a[i]);
}
int main()
{
    int ch,item;
    while(1)
    {
    printf("enter 1.push 2.pop. 3.peek 4.display 5.exit \n");
    scanf("%d",&ch);
    switch(ch)
    {
        case 1:printf("enter the element ");
        scanf("%d",&item);
        push(item);
        break;
        case 2: pop();
        break;
        case 3:peek();
        break;
        case 4:display();
        break;
        case 5:exit(1);
        default:printf("invalid choice \n");
        break;
    }
    }
    return 0;
}
